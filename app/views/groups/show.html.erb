<div class="card px-5 py-5">
  <div class="row">
    <div class="col-4">
      <p>
        <strong>Name:</strong>
        <%= @group.name %>
      </p>
    </div>
    <div class="col-4">
      <p>
        <strong>Description:</strong>
        <%= @group.description %>
      </p>
    </div>

    <div class="col-4 align-end">
      <%= link_to 'Edit', edit_group_path(@group), class:"btn btn-primary mr-2" %>
      <%= link_to 'Back', groups_path, class:"btn btn-secondary" %>
    </div>
  </div>
</div>
<div class="row">
  <% @group.icons.each do |icon| %>
    <div class="col-6 my-3">
      <div class="card">
        <%= image_tag(icon.image,class:"card-img-top",style:"width:100%;height:22em;background-color:#{icon.color}") %>
        <div class="card-body">
          <h5 class="card-title"><%= icon.name %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>