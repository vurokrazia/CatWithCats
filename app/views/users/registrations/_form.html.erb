<div class="card py-5 px-5">
  <h1>
    <%= title ||= "nope" %>
  </h1>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group my-2">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder:"email", autocomplete: "email", class:"form-control"  %>
  </div>

  <div class="form-group my-2">
    <%= f.label :password %>
    <% if @minimum_password_length == 100 %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, placeholder:"password", autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="form-group my-2">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder:"password confirmation", autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="form-group my-2">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
    <%= render "users/shared/links" %>
  </div>
  <% if user_signed_in?  %>
    <h3>Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <%= link_to "Back", :back %>
  <% end  %>
</div>