<div class="card py-5 px-5">
  <h1>
    <%= title ||= "nope" %>
  </h1>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group my-2">
    <%= f.label t('words.email') %>
    <%= f.email_field :email, autofocus: true, placeholder: t('words.email'), autocomplete: "email", class:"form-control"  %>
  </div>

  <div class="form-group my-2">
    <%= f.label t('words.password') %>
    <% if @minimum_password_length == 100 %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, placeholder: t('words.password'), autocomplete: "new-password", class:"form-control" %>
  </div>
  <% unless user_signed_in?  %>
    <div class="form-group my-2">
      <%= f.label t('words.password_confirmation') %>
      <%= f.password_field :password_confirmation, placeholder: t('words.password_confirmation'), autocomplete: "new-password", class:"form-control" %>
    </div>
  <% end  %>

  <div class="form-group my-2">
    <%= f.submit user_signed_in? ? t('actions.update') : t('actions.sign_up'), class: "btn btn-primary" %>
    <% unless user_signed_in?  %>
      <%= render "users/shared/links" %>
    <% end  %>
  </div>
  
  <% if user_signed_in?  %>
    <div class="my-5">
      <h3>
        <%= t('actions.cancel_account') %>
      </h3>
      <p> <%= t('actions.unhappy') %> <%= button_to t('actions.cancel_account'), registration_path(resource_name), data: { confirm: t('actions.cancel_account') }, method: :delete, class:"btn btn-danger" %></p>
    </div>
  <% end  %>
</div>